<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:layout_marginTop="5dp"

    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp"
    android:elevation="3dp"
    >


    <RelativeLayout
        android:id="@+id/activity_myposts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="task.vikas.testapp.activity.Myposts"
        android:weightSum="1">

        <TextView
            android:text="Likes"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mypostslikeimg"
            android:layout_toEndOf="@+id/mypostslikeimg"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="13dp"
            android:id="@+id/mypostslikes" />

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@+id/mypostslikeimg"
            android:id="@+id/mypostsview" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/btn_radio"
            android:id="@+id/mypostsdp"
            android:layout_weight="0.24"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Post"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:id="@+id/mypostspost"
            android:layout_below="@+id/mypostsposttime"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="38dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/like"
            android:id="@+id/mypostslikeimg"
            android:layout_below="@+id/mypostspost"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp" />

        <TextView
            android:text="Posted At"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypostsposttime"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/mypostsposter"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Posted By"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mypostsposter"
            android:layout_below="@+id/mypostsdp"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
