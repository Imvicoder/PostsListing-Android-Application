<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp"

    >


    <RelativeLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:elevation="12dp"
    tools:context="task.vikas.testapp.activity.MainActivity"
    android:weightSum="1">

    <TextView
        android:text="Likes"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/likeimg"
        android:layout_toEndOf="@+id/likeimg"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="13dp"
        android:id="@+id/likes" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/likeimg"
        android:id="@+id/view" />

    <!--<TextView-->
        <!--android:text="Posted_By"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--android:textSize="20dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_above="@+id/posttime"-->
        <!--android:layout_alignParentStart="true" />-->

    <!--<TextView-->
        <!--android:text="Time:"-->
        <!--android:textColor="@color/colorPrimaryDark"-->
        <!--android:textSize="20dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_alignBaseline="@+id/posttime"-->
        <!--android:layout_alignBottom="@+id/posttime"-->
        <!--android:layout_alignParentStart="true" />-->

        <TextView
        android:text="Post"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:id="@+id/post"
        android:layout_below="@+id/posttime"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="38dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/like"
        android:id="@+id/likeimg"
        android:layout_below="@+id/post"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

        <TextView
            android:text="Posted By"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poster"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/likes" />

        <TextView
            android:text="Posted At"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/posttime"
            android:layout_below="@+id/poster"
            android:layout_alignEnd="@+id/poster" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@android:drawable/btn_radio"
            android:id="@+id/dp"
            android:layout_weight="0.24"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
